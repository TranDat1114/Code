@{
}

@{
    ViewData["Title"] = "Trần Phú Đạt";
}
@model NoiDung


<div class="row">
    <p class="h2 m-3">Shop bán táo</p>
    <hr />
    <div class="row g-3">
        @foreach(var item in Model.listProduct)
        {
            <div class="col-12 col-md-3 position-relative">
                <span class="position-absolute top-0 start-100 p-1 rounded text-nowrap translate-middle bg-danger  text-white">
                    Giảm @item.GetVNDPrice(@item.Discount)
                </span>
                <img class="w-100" src="/assets/anhIphone.png" />
                <p class="h6">
                    @item.ProductName
                </p>
                <strong class="h5 text-body">
                    Chỉ từ @item.GetVNDPrice(@item.Sale)/Tháng
                </strong>
                <s>@item.GetVNDPrice(@item.Price) đ</s>
                <p>
                    @for(int i = 0 ; i < item.StarReview.FullStar ; i++)
                    {
                        <i class="fa-solid fa-star text-warning"></i>
                    }
                    @for(int i = 0 ; i < item.StarReview.HalfStar ; i++)
                    {
                        <i class="fa-solid fa-star-half-stroke text-warning"></i>
                    }
                    @for(int i = 0 ; i < item.StarReview.NonStar ; i++)
                    {
                        <i class="fa-regular fa-star"></i>
                    }
                    (@item.Review đánh giá)
                </p>
                <div class="row">
                    <p class="col-5">Màn hình:</p>
                    <p class="col-7 text-truncate">@item.Description.ManHinh</p>
                </div>
                <div class="row">
                    <p class="col-5">Camera:</p>
                    <p class="col-7 text-truncate">@item.Description.Camera</p>
                </div>
                <div class="row">
                    <p class="col-5">Pin:</p>
                    <p class="col-7 text-truncate">@item.Description.Pin</p>
                </div>
                <div class="row">
                    <p class="col-5">Ram:</p>
                    <p class="col-7 text-truncate">@item.Description.RAM</p>
                </div>
                <div class="row">
                    <p class="col-5">CPU:</p>
                    <p class="col-7 text-truncate">@item.Description.CPU</p>
                </div>
                <div class="row">
                    <p class="col-5">HĐH:</p>
                    <p class="col-7 text-truncate">@item.Description.HĐH</p>
                </div>
            </div>
        }
    </div>
</div>